---
import type { Props as PageProps } from "../pages/repos/[...full_name].astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = PageProps;

const {
  title,
  repo: { description, language, html_url: link },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      time {
        font-size: 0.75rem;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <h1 class="title">{title}</h1>
        <h4>{description}</h4>
        <a href={link} target="_blank"> Check it out on Github</a>
        <hr />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
